#include <bits/stdc++.h>
using namespace std;

long long a[200005],n,m,d[200005];
bool vi[200005];
map<long long,vector<pair<long long, long long>>> gr;

long long dijkstra(long long start){

  priority_queue<pair<long long, long long>, vector<pair<long long, long long>>, greater<pair<long long, long long>>> Q;
  fill(d,d+200000,INT_MAX);
  Q.push({0,start});
  d[start] = 0;
  vi[start] = 1;

  while(!Q.empty()){
    long long u = Q.top().second;
    long long w = Q.top().first;
    Q.pop();
    vi[u] = 1;

    if(u == n){
      return d[n];
    }
    
    if(d[u] < w){
      continue;
    }
    for(int i=0;i<gr[u].size();i++){
      int v = gr[u][i].first;
      int dis = gr[u][i].second;
      if(vi[v]){
        continue;
      }
      if(d[u] + dis < d[v]){
        d[v] = d[u] + dis;
        Q.push({d[v],v});
      }
    } 
  }
  return -1;
}

int main() {
  ios_base::sync_with_stdio(0);
  cin.tie(0);
  cout.tie(0);

  cin>>n>>m;

  for(int i=1;i<=m;i++){
    int x,y,z;
    cin>>x>>y>>z;
    gr[x].emplace_back(y,z);
  }

  cout<<dijkstra(1);

  return 0;
}
