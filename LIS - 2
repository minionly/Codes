#include <bits/stdc++.h>
using namespace std;

long int a[30005];
vector<int> v;

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int n;

    cin>>n;

    for(int i=0;i<n;i++){
        cin>>a[i];
    }

    v.push_back(a[0]);

    for(int i=1;i<n;i++){
        if(a[i] > v.back()){
            v.push_back(a[i]);
        }
        else{
            int p = lower_bound(v.begin(),v.end(),a[i]) - v.begin();
            if(p != v.size()){
                v[p] = a[i];
            }
        }
    }

    cout<<v.size();
    return 0;
}
