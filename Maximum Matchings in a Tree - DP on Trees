#include <bits/stdc++.h>
using namespace std;
#define endl '\n' 
/**
* IDEA:
*/

const long long kn = 2e5 + 5;
vector<int> gr[kn];
int f[kn][2]; 
// 0 - not connected to children
//1 - connected to children

void dfs(int u, int p){
    for(int i : gr[u]){
        if(i != p){
            dfs(i, u);
            f[u][0] += max(f[i][0], f[i][1]);
        }
    }

    for(int i : gr[u]){
        if(i != p){
            f[u][1] = max(f[u][1],1 + f[i][0] + f[u][0] - max(f[i][0], f[i][1]));
        }
    }
}

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    // freopen("main.inp","r",stdin);
    // freopen("main.out","w",stdout);

    int n;

    cin>>n;

    for(int i=1;i<n;i++){
        int u, v;
        cin>>u>>v;
        gr[u].push_back(v);
        gr[v].push_back(u);
    }

    dfs(1, -1);

    cout<<max(f[1][0], f[1][1]);

    return 0;
}
