#include <bits/stdc++.h>
using namespace std;

long long tree[4*100000],lazy[4*100000];

void propagate(int id, int l, int r){
    if(!lazy[id]){
        return;
    }

    tree[id] += lazy[id];
    if(l != r){
        lazy[2*id] += lazy[id];
        lazy[2*id+1] += lazy[id];
    }
    lazy[id] = 0;
}

void update(int id, int l, int r, int u, int v, int val){
    propagate(id,l,r);

    if(r < u || l > v){
        return;
    }
    if(u <= l && r <= v){
        lazy[id] += val;
        propagate(id,l,r);
        return;
    }
    int mid = l+r >> 1;
    update(2*id,l,mid,u,v,val);
    update(2*id+1,mid+1,r,u,v,val);
}

long long get(int id, int l, int r, int i){
    propagate(id,l,r);
    if(i < l || i > r){
        return -1;
    }
    if(l == r){
        return tree[id];
    }
    int mid = l+r >> 1;
    return max(get(2*id,l,mid,i), get(2*id+1,mid+1,r,i));
}

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    // freopen("main.inp","r",stdin);
    // freopen("main.out","w",stdout);

    int n,m;
    cin>>n>>m;

    while(m--){
        int task;
        cin>>task;
        if(task == 1){
            int l,r,v;
            cin>>l>>r>>v;
            l++;
            update(1,1,n,l,r,v);
        }
        else{
            int i;
            cin>>i;
            i++;
            cout<<get(1,1,n,i)<<endl;
        }
    }

    return 0;
}
