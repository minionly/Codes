#include <bits/stdc++.h>
using namespace std;
#define endl '\n' 
/**
* IDEA:
*/

const long long kn = 2e5 + 5;
vector<int> gr[kn];
int a[kn];

int sub(int u){
  if(gr[u].size() == 0){
    return 1;
  }
  for(int i : gr[u]){
    a[u] += sub(i);
  }
  return a[u] + 1;
}

int main() {
  ios_base::sync_with_stdio(0);
  cin.tie(0);
  cout.tie(0);

  // freopen("main.inp","r",stdin);
  // freopen("main.out","w",stdout);

  int n;

  cin>>n;

  for(int i=2;i<=n;i++){
    int u;
    cin>>u;
    gr[u].push_back(i);
  }

  sub(1);

  for(int i=1;i<=n;i++){
    cout<<a[i]<<' ';
  }

  return 0;
}
