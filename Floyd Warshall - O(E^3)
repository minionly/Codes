#include <bits/stdc++.h>
using namespace std;
/**
* IDEA: Floyd Warshall's APSP algorithm.
*/

long long gr[505][505], f[505][505],n,m,q;

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    // freopen("main.inp","r",stdin);
    // freopen("main.out","w",stdout);

    cin>>n>>m>>q;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n;j++){
            if(i == j){
                f[i][j] = 0;
                continue;
            }
            f[i][j] = 1e18;
        }
    }

    while(m--){
        long long x,y,c;
        cin>>x>>y>>c;
        gr[x][y] = gr[y][x] = min(c,gr[x][y]);
        f[x][y] = f[y][x] = min(c, f[x][y]);
    }

    for(int k=1;k<=n;k++){
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n;j++){
                if(f[i][k] + f[k][j] <= f[i][j]){
                    f[i][j] = f[i][k] + f[k][j];
                }
            }
        }
    }

    while(q--){
        int u,v;
        cin>>u>>v;
        if(u == v){
            cout<<0<<endl;
            continue;
        }
        cout<<(f[u][v] == 1e18 ? -1 : f[u][v])<<endl;
    }

    return 0;
}
